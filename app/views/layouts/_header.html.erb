<div class = "header">
  <ul>
  	<li><%= link_to t("header.home"), root_path %></li>
    <% if can? :manage, Organization %>
      <li><%= link_to t("header.pending_approvals"), organizations_path  %></li>
      <li><%= link_to t("header.add_applications"), "/oauth/applications/new" %></li>
    <% end %>
    <% if can? :manage, User %>
      <li><%= link_to t("header.create_a_user"), new_organization_user_path(current_user.organization_id) %></li>
      <li><%= link_to t("header.list_users"), organization_users_path(current_user.organization_id) %></li>
    <% end %>
    <% if has_signed_in_user? %>
      <li><%= link_to t("header.log_out"), logout_path, :class => 'logout' %></li>
    <% else %>
      <li><%= link_to t("header.log_in"), login_path, :class => 'signin' %></li>
      <li><%= link_to t("header.register"), register_path, :class => 'signin' %></li>
    <% end %>
  </ul>
</div>
