<div id="register">
  <header>
    <h2><%= "Register User" %></h2>
  </header>

  <%= semantic_form_for @user, :url => organization_users_path do |f| %>
    <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
    <% end %>

    <%= f.actions do %>
      <% f.action :submit, :label => t("register"), :as => :button %>
    <% end %>
  <% end %>
</div>

