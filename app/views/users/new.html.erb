<%= stylesheet_link_tag 'register_page' %>

<div id="register">
  <h1><%= "Register User" %></h1>
  <%= semantic_form_for @user, :url => organization_users_path do |f| %>
    <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :email %>
    <% end %>

    <%= f.actions do %>
      <% f.action :submit, :label => t("register"), :as => :button %>
    <% end %>
  <% end %>
</div>

