<h1>Sign In</h1>

<%= semantic_form_for 'user', :url => sessions_path do |f| %>
  <%= f.inputs do %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true %>
  <% end %>

  <%= f.actions do %>
    <% f.action :submit, :label => "Log in", :as => :button %>
  <% end %>
<% end %>